{
  "name": "GBK-CSS-Starter-Kit",
  "version": "1.0.0",
  "description": "GBK Soft starter kit for css projects",
  "main": "index.js",
  "scripts": {
    "start": "gulp serve",
    "build": "gulp",
    "build:prod": "gulp build:prod",
    "debug": "gulp css-debug",
    "status": "git status && exit 0",
    "lint": "gulp lint:css && exit 0",
    "reinstall": "rm -rf dist | rm -rf node_modules | yarn install",
    "component": "yarn run plop component",
    "module": "yarn run plop module",
    "page": "yarn run plop page",
    "regtest:ref": "backstop reference --configPath=config/backstop-config.js --pathfile=backstop-pages",
    "regtest:app": "backstop approve --configPath=config/backstop-config.js --pathfile=backstop-pages",
    "regtest:test": "backstop test --configPath=config/backstop-config.js --pathfile=backstop-pages"
  },
  "author": "Vladimir Humeniuk",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^8.3.0",
    "babel-core": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "browser-sync": "^2.23.7",
    "cssnano": "^3.10.0",
    "del": "^3.0.0",
    "delete-empty": "^2.0.0",
    "fs": "^0.0.1-security",
    "gulp": "^3.9.1",
    "gulp-babel": "^7.0.0",
    "gulp-cache": "^1.0.2",
    "gulp-clean-css": "^3.9.3",
    "gulp-imagemin": "^4.1.0",
    "gulp-load-plugins": "^1.5.0",
    "gulp-newer": "^1.4.0",
    "gulp-notify": "^3.0.0",
    "gulp-postcss": "^7.0.0",
    "gulp-pug": "^4.0.1",
    "gulp-pug-linter": "^0.5.1",
    "gulp-remove-files": "0.0.3",
    "gulp-rename": "^1.4.0",
    "gulp-reporter": "^2.8.2",
    "gulp-sass": "^4.0.1",
    "gulp-scss-lint": "^0.6.1",
    "gulp-size": "^3.0.0",
    "gulp-sourcemaps": "^2.6.1",
    "gulp-stats": "^0.0.4",
    "gulp-stylelint": "^7.0.0",
    "gulp-uglify": "^3.0.0",
    "gulp-uglify-es": "^1.0.4",
    "immutable-css": "^1.1.2",
    "minimist": "^1.2.0",
    "plop": "^2.0.0",
    "postcss-assets": "^5.0.0",
    "postcss-browser-reporter": "^0.5.0",
    "postcss-debug": "^0.4.2",
    "postcss-pxtorem": "^4.0.1",
    "postcss-reporter": "^5.0.0",
    "pre-commit": "^1.2.2",
    "run-sequence": "^2.2.0",
    "stylelint": "^9.2.0",
    "stylelint-config-standard": "^18.2.0"
  },
  "pre-commit": [
    "lint",
    "status"
  ]
}
